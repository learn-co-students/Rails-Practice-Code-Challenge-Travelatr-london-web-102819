<%=form_for @post do |f|%>
    <%=f.label :title%><br>
    <%=f.text_field :title%><br><br>

    <%=f.label :content%><br>
    <%=f.text_area :content%><br><br>

    <%= collection_select(:post, :blogger_id, Blogger.all, :id, :name)%><br><br>
    <%= collection_select(:post, :destination_id, Destination.all, :id, :name)%> <br><br>

    <%= f.submit%>

<%end%>