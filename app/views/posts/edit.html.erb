<%= form_for(@post) do |f|%>

    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :content%><br>
    <%= f.text_area :content%><br>

    <h4>Select a blogger:</h4>
    <%= f.collection_select :blogger_id, Blogger.all.order(:name), :id, :name %>

    <h4>Select a destination:</h4>
    <%= f.collection_select :destination_id, Destination.all.order(:name), :id, :name %><br>

    <br>

    <%= f.submit%>
<% end %>